<h1>Todo List</h1>

<table>
 <tr>
   <th>Name</th>
   <th>status</th>
 <tr>
</table>

<% @todos.each do |todo| %>
  <p>
  <%= todo.name %>
  <%= todo.status %> &nbsp; <%= link_to "Show" , todo %> |
  <%= link_to "Edit", edit_todo_path(todo)%> |
  <%= link_to "Delete",todo, :method => "Delete", data: { confirm: "Are You sure?"}%> 
  </p>
<% end %>

<p><%= link_to "Add a New Task", new_todo_path %></p>
